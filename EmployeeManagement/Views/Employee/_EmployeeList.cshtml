@model IEnumerable<EmployeeManagement.Models.Employee>

@foreach (var employee in Model)
{
    <tr>
        <td>@employee.Id</td>
        <td>@employee.Name</td>
        <td>@employee.Department</td>
        <td>@employee.Salary</td>
        <td>
            <a href="@Url.Action("Edit", new { id = employee.Id })" class="btn btn-warning">✏ Edit</a>
            <a href="@Url.Action("Delete", new { id = employee.Id })" class="btn btn-danger">🗑 Delete</a>
        </td>
    </tr>
}
